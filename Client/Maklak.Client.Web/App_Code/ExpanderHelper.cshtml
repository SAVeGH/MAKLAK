@inherits Maklak.Client.Web.Helpers.HelperPage
@using System.Web.Mvc;
@using System.Web.Mvc.Html;
@using Maklak.Client.Models
@using Maklak.Client.DataSets

@helper Expander(Maklak.Client.Models.ExpanderModel model)
{

<div class="expanderPanel">

    @{ 
        foreach (ModelDS.ExpanderDataRow row in model.ExpanderData)
        {
            string contentClass = row.Opened ? "expanderSectionContentOpened" : "expanderSectionContent";
            <div class="expanderSectionPanel">
                <div class="expanderSectionHeader">
                    @row.Name
                </div>
                <div class="@contentClass">
                    @Html.Action(row.Action, row.Controller)
                </div>
            </div>            
        }

    }

</div>


}
